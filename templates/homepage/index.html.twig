{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    {% set ajaxUrl = url('ticket_ajax') %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <form method="POST" action="{{ url('ticket_ajax') }}">
        <input type="submit">
    </form>

    <ul>
        {% for user in users %}
        <li>
            {{ user.email }}
            <small>
                {{ "%d - %d"|format(user.shiftStart|date('H'), user.shiftEnd|date('H')) }}
            </small>
            <button class="ticket" id="user{{ user.id }}">Take a break!</button>
        </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
